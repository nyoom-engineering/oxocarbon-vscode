// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "vim_mode": true,

  "ui_font_family": "SF Pro",
  "buffer_font_family": "Berkeley Mono",
  "ui_font_size": 16,
  "buffer_font_size": 14,

  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Oxocarbon Dark"
  },

  // enable ligatures
  "buffer_font_features": {
    "calt": true,
    "ss01": true,
    "ss04": true,
    "ss05": true,
    "ss06": true
  },

  "buffer_font_weight": 310, // should be 260/retina but font rendering needs work
  "buffer_font_fallbacks": ["SF Mono"],
  "buffer_line_height": { "custom": 1.4 },

  "gutter": {
    "line_numbers": false
  },

  // "tab_bar": {
  //   "show": false
  // }

  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false,
    "agent_review": false,
    "code_actions": false
  },

  // "use_system_window_tabs": true // broken ??

  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },

  "indent_guides": {
    "enabled": false
  },

  "icon_theme": {
    "mode": "system",
    "dark": "Zed (Default)",
    "light": "Zed (Default)"
  },

  "inlay_hints": {
    "enabled": false
  },

  "telemetry": {
    "diagnostics": true,
    "metrics": true
  },

  "terminal": {
    "font_size": 12,
    "font_family": "Berkeley Mono"
  },

  "project_panel": {
    "entry_spacing": "standard",
    "file_icons": false,
    "folder_icons": false,
    "indent_guides": {
      "show": "never"
    }
  },

  "outline_panel": {
    "file_icons": false,
    "folder_icons": false,
    "indent_guides": {
      "show": "never"
    }
  }
}
